{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components": ["./src/components"],
      "@/icons": ["./src/components/icons"],
      "@/uikit": ["./src/components/uikit"],
      "@/sections": ["./src/components/sections"],
      "@/content": ["./src/content"],
      "@/utils": ["./src/utils"]
    },
    "extends": "./tsconfig.storybook.json"
  },
  "include": [
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/types/svg.d.ts"
  ],
  "exclude": ["functions/**/*", "node_modules", "src/**/*.stories.tsx"]
}
